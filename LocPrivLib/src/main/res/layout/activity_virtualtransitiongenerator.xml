<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/buttongeneratevirtualtransition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Generate Virtual Transition"
        android:onClick="generateVirtualTransition" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/virtualtransitionmap"
        android:layout_below="@+id/buttongeneratevirtualtransition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.google.android.gms.maps.MapView>

</RelativeLayout>